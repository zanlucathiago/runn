  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Server with Yarn",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["run", "start-server"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Start React App with Yarn",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["workspace", "frontend", "start"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
    },
    {
      "name": "Debug My App",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack://*/src/*": "${webRoot}/src/*"
      }
    }
  ]
}